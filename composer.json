{
    "name": "dziany-druid/notifreak",
    "description": "A simple application used to receive messages from various services and forward them to various notification channels.",
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=8.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "symfony/console": "~7.1.0",
        "symfony/dotenv": "~7.1.0",
        "symfony/flex": "^2",
        "symfony/framework-bundle": "~7.1.0",
        "symfony/messenger": "~7.1.0",
        "symfony/notifier": "~7.1.0",
        "symfony/runtime": "~7.1.0",
        "symfony/telegram-notifier": "~7.1.0",
        "symfony/twig-bundle": "~7.1.0",
        "symfony/validator": "~7.1.0",
        "symfony/yaml": "~7.1.0"
    },
    "require-dev": {
        "ergebnis/composer-normalize": "^2.44",
        "friendsofphp/php-cs-fixer": "^3.64",
        "phpro/grumphp-shim": "^2.8",
        "phpstan/phpstan": "^1.12",
        "phpunit/phpunit": "^11.4",
        "symfony/stopwatch": "~7.1.0",
        "symfony/web-profiler-bundle": "~7.1.0"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*",
        "symfony/polyfill-php82": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "minimum-stability": "stable",
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "php-http/discovery": true,
            "phpro/grumphp-shim": true,
            "symfony/flex": true,
            "symfony/runtime": true
        },
        "sort-packages": true
    },
    "extra": {
        "composer-normalize": {
            "indent-size": 4,
            "indent-style": "space"
        },
        "symfony": {
            "allow-contrib": false,
            "require": "7.1.*"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "grumphp": [
            "php ./vendor/bin/grumphp run"
        ],
        "php-cs-fixer": [
            "php ./vendor/bin/php-cs-fixer fix -v"
        ],
        "phpstan": [
            "php ./vendor/bin/phpstan analyse"
        ],
        "phpunit": [
            "php ./vendor/bin/phpunit"
        ]
    }
}
